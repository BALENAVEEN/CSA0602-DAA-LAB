#include <stdio.h>

// Merge two halves
void merge(int arr[], int left, int mid, int right) {
    int n1 = mid - left + 1;
    int n2 = right - mid;

    int L[n1], R[n2];

    // Copy data
    for (int i = 0; i < n1; i++)
        L[i] = arr[left + i];
    for (int j = 0; j < n2; j++)
        R[j] = arr[mid + 1 + j];

    int i = 0, j = 0, k = left;

    // Merge temp arrays back
    while (i < n1 && j < n2) {
        if (L[i] <= R[j])
            arr[k++] = L[i++];
        else
            arr[k++] = R[j++];
    }

    // Remaining elements
    while (i < n1)
        arr[k++] = L[i++];

    while (j < n2)
        arr[k++] = R[j++];
}

// Merge Sort function
void mergeSort(int arr[], int left, int right) {
    if (left < right) {
        int mid = (left + right) / 2;

        mergeSort(arr, left, mid);
        mergeSort(arr, mid + 1, right);

        merge(arr, left, mid, right);
    }
}

void printArray(int arr[], int n) {
    for (int i = 0; i < n; i++)
        printf("%d ", arr[i]);
    printf("\n");
}

int main() {

    // Test Case 1
    int a1[] = {31, 23, 35, 27, 11, 21, 15, 28};
    int n1 = 8;

    mergeSort(a1, 0, n1 - 1);
    printf("Test Case 1 Output:\n");
    printArray(a1, n1);

    // Test Case 2
    int a2[] = {22, 34, 25, 36, 43, 67, 52, 13, 65, 17};
    int n2 = 10;

    mergeSort(a2, 0, n2 - 1);
    printf("\nTest Case 2 Output:\n");
    printArray(a2, n2);

    return 0;
}
