#include <stdio.h>
#include <math.h>
#include <float.h>

// Structure to represent a point
struct Point {
    double x, y;
};

// Function to calculate distance between two points
double distance(struct Point p1, struct Point p2) {
    return sqrt((p1.x - p2.x) * (p1.x - p2.x) + 
                (p1.y - p2.y) * (p1.y - p2.y));
}

// Function to find the closest pair of points using brute force
void findClosestPair(struct Point points[], int n) {
    double minDist = DBL_MAX;
    struct Point p1, p2;

    // Check all possible pairs
    for (int i = 0; i < n; i++) {
        for (int j = i + 1; j < n; j++) {
            double d = distance(points[i], points[j]);
            if (d < minDist) {
                minDist = d;
                p1 = points[i];
                p2 = points[j];
            }
        }
    }

    // Print results
    printf("Closest pair: (%.0f, %.0f) - (%.0f, %.0f)\n", p1.x, p1.y, p2.x, p2.y);
    printf("Minimum distance: %lf\n", minDist);
}

int main() {
    struct Point points[] = {{1, 2}, {4, 5}, {7, 8}, {3, 1}};
    int n = sizeof(points) / sizeof(points[0]);

    findClosestPair(points, n);

    return 0;
}
