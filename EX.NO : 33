#include <stdio.h>

void findMinMax(int arr[], int n, int *min, int *max) {
    *min = arr[0];
    *max = arr[n - 1];

    // For unsorted arrays, check all elements
    for (int i = 1; i < n; i++) {
        if (arr[i] < *min)
            *min = arr[i];
        if (arr[i] > *max)
            *max = arr[i];
    }
}

int main() {
    // Test Case 1
    int a1[] = {2, 4, 6, 8, 10, 12, 14, 18};
    int n1 = 8;
    int min1, max1;

    findMinMax(a1, n1, &min1, &max1);
    printf("Test Case 1:\nMin = %d, Max = %d\n\n", min1, max1);

    // Test Case 2
    int a2[] = {11, 13, 15, 17, 19, 21, 23, 35, 37};
    int n2 = 9;
    int min2, max2;

    findMinMax(a2, n2, &min2, &max2);
    printf("Test Case 2:\nMin = %d, Max = %d\n\n", min2, max2);

    // Test Case 3 (unsorted)
    int a3[] = {22, 34, 35, 36, 43, 67, 12, 13, 15, 17};
    int n3 = 10;
    int min3, max3;

    findMinMax(a3, n3, &min3, &max3);
    printf("Test Case 3:\nMin = %d, Max = %d\n", min3, max3);

    return 0;
}
