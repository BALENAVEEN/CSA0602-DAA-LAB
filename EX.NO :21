#include <stdio.h>

// Optimized Bubble Sort function
void bubbleSort(int arr[], int n) {
    int i, j, temp, swapped;

    for (i = 0; i < n - 1; i++) {
        swapped = 0;
        for (j = 0; j < n - i - 1; j++) {
            if (arr[j] > arr[j + 1]) {
                temp = arr[j];
                arr[j] = arr[j + 1];
                arr[j + 1] = temp;
                swapped = 1;
            }
        }
        if (swapped == 0)  // Stop if array already sorted
            break;
    }
}

void printArray(int arr[], int n) {
    for (int i = 0; i < n; i++)
        printf("%d ", arr[i]);
    printf("\n");
}

int main() {
    int test1[] = {64, 25, 12, 22, 11};
    int test2[] = {29, 10, 14, 37, 13};
    int test3[] = {3, 5, 2, 1, 4};
    int test4[] = {1, 2, 3, 4, 5};
    int test5[] = {5, 4, 3, 2, 1};

    int n1 = sizeof(test1)/sizeof(test1[0]);
    int n2 = sizeof(test2)/sizeof(test2[0]);
    int n3 = sizeof(test3)/sizeof(test3[0]);
    int n4 = sizeof(test4)/sizeof(test4[0]);
    int n5 = sizeof(test5)/sizeof(test5[0]);

    printf("Test 1:\nInput:  ");
    printArray(test1, n1);
    bubbleSort(test1, n1);
    printf("Output: ");
    printArray(test1, n1);

    printf("\nTest 2:\nInput:  ");
    printArray(test2, n2);
    bubbleSort(test2, n2);
    printf("Output: ");
    printArray(test2, n2);

    printf("\nTest 3:\nInput:  ");
    printArray(test3, n3);
    bubbleSort(test3, n3);
    printf("Output: ");
    printArray(test3, n3);

    printf("\nTest 4 (Already Sorted):\nInput:  ");
    printArray(test4, n4);
    bubbleSort(test4, n4);
    printf("Output: ");
    printArray(test4, n4);

    printf("\nTest 5 (Reverse Sorted):\nInput:  ");
    printArray(test5, n5);
    bubbleSort(test5, n5);
    printf("Output: ");
    printArray(test5, n5);

    return 0;
}
